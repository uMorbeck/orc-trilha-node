<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <title>To Do List</title>
  </head>
  <body>

    <% if (message != "") {%>
      <%- include('./components/message', {message: message, type: type}) %>
    <% } %>

    <header>
      <% if (task == null) { %>
        <%- include('./components/form', {
          titleForm: "Lista de Tarefas",
          action: "create",
          value: "",
          idBtn: "addButton",
          nameBtn: "Adicionar"
        })%>
      <% } else { %>
        <%- include('./components/form', {
          titleForm: "Editar Tarefar",
          action: `update/${task._id}`,
          value: task.task,
          idBtn: "updateButton",
          nameBtn: "Atualizar"
        })%>
      <% } %>
    </header>

    <section id="tasks">
      <ul>
        <% tasksList.forEach((task) => { %>
          <li class="check-<%= task.check %>">
            <div>
              <a href="/check/<%= task._id %>" class="check-<%= task.check %>"><%= task.task %></a>
              <span>Criado em <%= task.date.toLocaleDateString("pt-BR") %></span>
              <% if (task.edited) { %>
                <span>(editado)</span>
              <% } %>
            </div>
            <div>
              <a class="btnUpdate" href="/search/<%= task._id %>/update"><i class="bi bi-pencil-square"></i></a>
              <a class="btnDelete" href="/search/<%= task._id %>/delete"><i class="bi bi-trash3"></i></a>
            </div>
          </li>
        <% }) %>
      </ul>
    </section>

    <% if (taskDelete != null) { %>
      <%- include('./components/modalDel') %>
    <% } %>

    <script src="script.js"></script>
  </body>
</html>
