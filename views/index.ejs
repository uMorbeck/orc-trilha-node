<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <title>To Do List</title>
  </head>
  <body>

    <% if (message != "") {%>
    <section class="message message-<%= type %>">
      <p><%= message%></p>
      <span id="close-message"><i class="bi bi-x-lg"></i></span>
    </section>
    <% } %>

    <header>
      <% if (task == null) { %>
        <h1>Lista de Tarefas</h1>
        <form action="/create" method="post">
          <div class="inputs">
            <input
              type="text"
              name="task"
              id="task"
              placeholder="Insira uma tarefa"
            />
            <button id="addButton" type="submit">Adicionar</button>
          </div>
        </form>
      <% } else { %>
        <h1>Editar Tarefa</h1>
        <form action="/update/<%= task._id %>" method="post">
          <div class="inputs">
            <input
              type="text"
              name="task"
              id="task"
              value="<%= task.task %>"
            />
            <button id="updateButton" type="submit">Atualizar</button>
          </div>
        </form>
      <% } %>
    </header>

    <section id="tasks">
      <ul>
        <% tasksList.forEach((task) => { %>
          <li class="check-<%= task.check %>">
            <div>
              <a href="/check/<%= task._id %>" class="check-<%= task.check %>"><%= task.task %></a>
              <span>Criado em <%= task.date.toLocaleDateString("pt-BR") %></span>
              <% if (task.edited) { %>
                <span>(editado)</span>
              <% } %>
            </div>
            <div>
              <a class="btnUpdate" href="/search/<%= task._id %>/update"><i class="bi bi-pencil-square"></i></a>
              <a class="btnDelete" href="/search/<%= task._id %>/delete"><i class="bi bi-trash3"></i></a>
            </div>
          </li>
        <% }) %>
      </ul>
    </section>

    <% if (taskDelete != null) { %>
    <section id="modal">
      <div id="card">
        <div id="head">
          <h2>Confirmação</h2>
          <a id="close" href="/"><i class="bi bi-x-lg"></i></a>
        </div>
        <hr>
        <p>Deseja realmente apagar a tarefa: <%= taskDelete.task %></p>
        <div id="btns">
          <a id="btnNo" href="/">Não</a>
          <a id="btnYes" href="/deleteTask/<%= taskDelete._id %>">Sim</a>
        </div>
      </div>
    </section>
    <% } %>

    
    <script src="script.js"></script>
  </body>
</html>
